                  //-   option(value=30) 30 Días 
                  //-   option(value=365) 1 Año                               
              .modal-footer
                  //input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel', href='/reservar')                     
                  a.btn.btn-danger(href='/cliente') Cancelar
                  input.btn.btn-success(type='submit', value='Reservar')
            


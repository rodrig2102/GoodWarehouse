                  li
                      a.smoothScroll(href='/reservaciones') Mis Reservaciones
                  li
                      a.smoothScroll(href='/logout') Cerrar Sesión
  section
    .container
      .row
        .col-md-6.col-md-offset-3
          .form-wrap
            h1 Reservación de Depósito
            if (message.length > 0) 
              .alert.alert-danger #{message}
                
            form.form-horizontal(style='margin:0 auto')(action='/verificar', method='POST')
              .modal-header
                h4.modal-title Complete los siguientes campos                                     
              .modal-body                     
                .form-group
                  .form-group
                  label(for='sel1') Seleccione su Depósito:
                  select#sel1.form-control(name='deposito')
                    option(value='001') Depósito 5 Metros
                    option(value='002') Depósito 10 Metros
                    option(value='003') Depósito 15 Metros
                    option(value='004') Depósito 22 Metros
                    option(value='005') Depósito 30 Metros
                        
                  .form-group               
                  label(for='check_in') Fecha de inicio                         
                  input#check_in.form-control(type='text', placeholder='Fecha de entrada', name='check_in', value='', autocomplete='off', required)                         
                  .form-group                         
                  label(for='check_out') Fecha de salida                         
                  input#check_out.form-control(type='text', placeholder='Fecha de salida', name='check_out', onchange='calculoNoches();', value='', autocomplete='off', required)
                  p#calculoNoches
